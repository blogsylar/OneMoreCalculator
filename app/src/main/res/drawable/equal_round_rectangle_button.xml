<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle" >
            <corners android:radius="0px" />
            <gradient
                android:angle="270"
                android:endColor="#b7670b"
                android:startColor="#d69346"
                android:type="linear" />
            <padding
                android:bottom="7px"
                android:left="4px"
                android:right="4px"
                android:top="7px" />

        </shape>
    </item>
    <item>
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle" >
            <corners android:radius="0px" />
            <gradient
                android:angle="90"
                android:endColor="#faad53"
                android:startColor="#fa8d10"
                android:type="linear" />
            <padding
                android:bottom="7px"
                android:left="4px"
                android:right="4px"
                android:top="7px" />
        </shape>
    </item>
</selector>