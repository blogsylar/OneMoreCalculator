<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle" >
            <corners android:radius="0px" />
            <gradient
                android:angle="270"
                android:endColor="#a1a1a1"
                android:startColor="#737373"
                android:type="linear" />
            <padding
                android:bottom="7px"
                android:left="4px"
                android:right="4px"
                android:top="7px" />
        </shape>
    </item>
    <item>
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle" >
            <corners android:radius="0px" />
            <gradient
                android:angle="90"
                android:endColor="#a9a9a9"
                android:startColor="#b9b9b9"
                android:type="linear" />
            <padding
                android:bottom="7px"
                android:left="4px"
                android:right="4px"
                android:top="7px" />
        </shape>
    </item>
</selector>